{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "rootDir": ".",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["vitest/globals", "node"],
    "paths": {
      "mmolike_rpg-domain": ["../domain/src/index.ts"],
      "mmolike_rpg-domain/*": ["../domain/src/*"],
      "mmolike_rpg-content": ["../content/src/index.ts"],
      "mmolike_rpg-content/*": ["../content/src/*"]
    }
  },
  "include": ["src", "test"],
  "exclude": ["node_modules", "dist"]
}