{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    "paths": {
      "@/*": ["./src/*"],
      "mmolike_rpg-application": ["../../packages/application/src"],
      "mmolike_rpg-application/*": ["../../packages/application/src/*"],
      "mmolike_rpg-domain/*": ["../../packages/domain/src/*"],
      "mmolike_rpg-content/*": ["../../packages/content/src/*"]
    }
  }
}
